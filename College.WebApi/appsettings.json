{
    "Serilog": {
        "Using": [],
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Warning",
                "System": "Warning"
            }
        },
        "Enrich": [
            "FromLogContext",
            "WithMachineName",
            "WithProcessId",
            "WithThreadId"
        ],
        "WriteTo": [
            {
                "Name": "Console"
            },
            {
                "Name": "File",
                "Args": {
                    "path": "logs/log.txt",
                    "rollingInterval": "Day"
                }
            }
        ]
    },
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    // For Authorization
    "Authentication": {
        "Roles": [ "Administrator", "Moderator", "User" ]
    },
    "TokenValidationParameters": {
        "ValidateIssuer": "true",
        "ValidateAudience": "true",
        "ValidateLifetime": "true",
        "ValidateIssuerSigningKey": "true"
    }
}